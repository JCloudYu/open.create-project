{
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "./_build",
		"target": "es2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": [ "./*" ]
		}
	},
	"exclude": ["node_modules", "_build", "_dump"]
}